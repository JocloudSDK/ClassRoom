<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout"
    android:keepScreenOn="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.herewhite.sdk.WhiteBroadView
        android:id="@+id/white"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_marginLeft="@dimen/dp_7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/relativeLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <RelativeLayout
        android:id="@+id/alphaView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/relativeLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha="0"/>

    <com.thunder.livesdk.video.ThunderPlayerView
        android:id="@+id/teacher_view"
        android:layout_width="@dimen/dp_186"
        android:layout_height="@dimen/dp_101"
        android:background="@color/black"
        android:visibility="visible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></com.thunder.livesdk.video.ThunderPlayerView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_advertising_picture"
        android:layout_width="@dimen/dp_186"
        android:layout_height="@dimen/dp_101"
        android:src="@mipmap/live_canvas_placeholder"
        android:scaleType="center"
        android:background="#ff424242"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></androidx.appcompat.widget.AppCompatImageView>

    <com.thunder.livesdk.video.ThunderPlayerView
        android:id="@+id/student_view"
        android:layout_width="@dimen/dp_186"
        android:layout_height="@dimen/dp_101"
        android:background="@color/black"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/teacher_view"
        >

    </com.thunder.livesdk.video.ThunderPlayerView>
    <TextView
        android:id="@+id/tv_theacher_player_view_id"
        android:layout_width="@dimen/dp_61"
        android:layout_height="@dimen/dp_17"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/gray_FFFFFF"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_6"
        app:layout_constraintLeft_toLeftOf="@+id/teacher_view"
        app:layout_constraintBottom_toBottomOf="@+id/teacher_view"
        />
    <com.thunder.livesdk.video.ThunderPreviewView
        android:id="@+id/student_preview_view_layout"
        android:layout_width="@dimen/dp_186"
        android:layout_height="@dimen/dp_101"
        android:background="@color/black"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/teacher_view"
         />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/student_view_id_layout"
        android:layout_width="@dimen/dp_186"
        android:layout_height="@dimen/dp_101"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/teacher_view">
        <TextView
            android:id="@+id/tv_student_player_view_id"
            android:layout_width="@dimen/dp_61"
            android:layout_height="@dimen/dp_17"
            android:text="大大老师"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/gray_FFFFFF"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_6"
            app:layout_constraintLeft_toLeftOf="@+id/student_view_id_layout"
            app:layout_constraintBottom_toBottomOf="@+id/student_view_id_layout"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!--聊天室-->
    <include
        android:id="@+id/include"
        layout="@layout/chat_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/teacher_view"
        app:layout_constraintTop_toBottomOf="@+id/teacher_view" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray_EBEBED"
        app:layout_constraintEnd_toStartOf="@+id/include" />


    <RelativeLayout
        android:id="@+id/live_status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/live_the_status_bar"
        android:visibility="visible"
        >
        <ImageView
            android:id="@+id/back_direct_broadcasting_room"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@mipmap/live_btn_back"
            ></ImageView>
        <TextView
            android:id="@+id/text_live_roomid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/back_direct_broadcasting_room"
            android:textSize="15sp"
            android:textColor="@color/gray_FFFFFF"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_12"
            android:text="美术课第一章"
            ></TextView>
        <View
            android:id="@+id/view_status_bar"
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_11"
            android:background="@color/gray_80FFFFF"
            android:layout_toRightOf="@+id/text_live_roomid"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_20"
            />
        <TextView
            android:id="@+id/text_live_userid"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_17"
            android:layout_toRightOf="@+id/view_status_bar"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/gray_80FFFFF"
            android:layout_marginTop="@dimen/dp_16"
            android:text="学生昵称"
            >
        </TextView>

        <TextView
            android:id="@+id/tv_live_assessment"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_26"
            android:background="@drawable/btn_login_background"
            android:text="@string/classroom_assessment"
            android:textColor="@color/gray_FFFFFF"
            android:gravity="center"
            android:paddingRight="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_5"
            android:drawableLeft="@mipmap/ico_feedback"
            android:layout_marginRight="@dimen/dp_52"
            android:paddingLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_alignParentRight="true"
            >
        </TextView>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageview_network"
            android:layout_width="@dimen/dp_21"
            android:layout_height="@dimen/dp_14"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@mipmap/no_signal_quality"
            ></androidx.appcompat.widget.AppCompatImageView>
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_reise_your_hand"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@mipmap/live_exercises"
        app:layout_constraintRight_toLeftOf="@+id/relativeLayout"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_the_console"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_reise_your_hand"
        android:background="@mipmap/live_console"
        />

    <TextView
        android:id="@+id/tv_logcat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="10sp"
        android:visibility="gone"
        android:background="@drawable/bg_class_room_log"
        android:textColor="@color/gray_FFFFFF"
        android:layout_marginRight="@dimen/dp_10"
        android:maxLines="5000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacher_view"
        app:layout_constraintRight_toLeftOf="@+id/btn_the_console"
        app:layout_constraintLeft_toRightOf="@+id/btn_the_console"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>
